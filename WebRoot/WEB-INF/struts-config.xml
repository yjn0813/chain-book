<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
  <form-beans >
  <form-bean name="registForm" type="struts.form.RegistForm" />
    <form-bean name="loginForm" type="struts.form.LoginForm" />
    <form-bean name="addBooksForm" type="struts.form.addBooksForm" />
    <form-bean name="detailBooksForm" type="struts.form.DetailBooksForm" />
	<form-bean name="updateForm" type="struts.form.UpdateForm" />
	<form-bean name="memberAddForm" type="struts.form.MemberAddForm" />
  </form-beans>

  <global-exceptions />
  <global-forwards />
  <action-mappings >
  <action
      attribute="registForm"
      name="registForm"
      path="/regist"
      scope="request"
      type="struts.action.RegistAction"
      validate="false">
      <forward name="Fail" path="/Regist.jsp" />
      <forward name="Success" path="/MemberAdd.jsp" />
    </action>
     <action
      attribute="loginForm"
      name="loginForm"
      path="/login"
      scope="request"
      type="struts.action.LoginAction"
      validate="true"
      input="/Login.jsp">
      <forward name="Fail" path="/Login.jsp" />
      <forward name="Success" path="/HomePage.jsp" />
      <forward name="Admin" path="/AdminMain.jsp" />
    </action>
    <action
      path="/showDetailBooks"
      type="struts.action.showDetailBooksAction"
      validate="false">
      <forward name="success" path="/BookList.jsp" />
    </action>
    <action
      attribute="addBooksForm"
      name="addBooksForm"
      path="/addBook"
      scope="request"
      type="struts.action.AddBookAction"
      validate="false">
      <forward name="fail" path="/AddBook.jsp" />
      <forward name="success" path="/queryBook.do" />
    </action>
    <action
      path="/queryBook"
      type="struts.action.QueryBookAction"
      validate="false">
      <forward name="query" path="/QueryBook.jsp" />
      <forward name="delete" path="/DeleteBook.jsp" />
      <forward name="modify" path="/ModifyBook.jsp" />
    </action>
    <action
      path="/showABook"
      type="struts.action.ShowABookAction"
      validate="false">
      <forward name="detail" path="/BookDetail.jsp" />
    </action>
    <action
      path="/queryCustom"
      type="struts.action.QueryCustomAction"
      validate="false">
      <forward name="query" path="/QueryCustom.jsp" />
      <forward name="delete" path="/DeleteCustom.jsp" />
     </action>
    <action
      path="/adminDetailBook"
      type="struts.action.AdminDetailBookAction"
      validate="false">
      <forward name="update" path="/BookUpdate.jsp" />
      <forward name="detail" path="/AdminDetailBook.jsp" />
    </action>
    <action
      attribute="updateForm"
      name="updateForm"
      path="/updateBook"
      scope="request"
      type="struts.action.UpdateBookAction"
      validate="false">
      <forward name="fail" path="/BookUpdate.jsp" />
      <forward name="success" path="/queryBook.do" />
    </action>
    <action
      path="/deleteBook"
      type="struts.action.DeleteBookAction"
      validate="false">
      <forward name="success" path="/queryBook.do?flag=delbook" />
    </action>
     <action
      path="/deleteCustom"
      type="struts.action.DeleteCustomAction"
      validate="false">
      <forward name="Fail" path="/queryCustom.do" />
      <forward name="Success" path="/queryCustom.do?flag=del" />
    </action>
    <action
      path="/exitMember"
      type="struts.action.ExitMemberAction"
      validate="false">
      <forward name="ExitSuccess" path="/HomePage.jsp" />
    </action>
    <action path="/chinese" 
    type="struts.action.ChineseAction"
    validate="false">
      <forward name="Success" path="/Login.jsp" />
    </action>
    <action
      path="/japenese"
      type="struts.action.JapeneseAction"
      validate="false">
      <forward name="Success" path="/Login.jsp" />
    </action>
    <action
      attribute="memberAddForm"
      name="memberAddForm"
      path="/memberAdd"
      scope="request"
      type="struts.action.MemberAddAction"
      validate="false">
      <forward name="Fail" path="/MemberAdd.jsp" />
      <forward name="Success" path="/HomePage.jsp" />
    </action>
    <action
      path="/cart"
      type="struts.action.CartAction"
      validate="false">
      <forward name="success" path="/Cart.jsp" />
    </action>
    
    <action path="/queryOrder" type="struts.action.QueryOrderAction">
      <forward name="query" path="/QueryOrder.jsp" />
      <forward name="delete" path="/DeleteOrder.jsp" />
    </action>
    <action path="/deleteOrder" type="struts.action.DeleteOrderAction">
      <forward name="success" path="/queryOrder.do?flag=delorder" />
    </action>
    
    <action
      path="/deleteCart"
      type="struts.action.DeleteCartAction"
      validate="false">
      <forward name="success" path="/cart.do?flag=delcart" />
    </action>
    <action
      path="/orderconfirm"
      type="struts.action.OrderconfirmAction"
      validate="false">
      <forward name="success" path="/orderconfirm.jsp" />
    </action>
    <action
      path="/submitorder"
      type="struts.action.SubmitorderAction"
      validate="false">
      <forward name="success" path="/orderdone.jsp" />
    </action>
    <action
      path="/selectcart"
      type="struts.action.SelectcartAction"
      validate="false">
      <forward name="success" path="/Cart.jsp" />
    </action>
    
  </action-mappings>

  <message-resources parameter="com.yourcompany.struts.ApplicationResources" />
</struts-config>

